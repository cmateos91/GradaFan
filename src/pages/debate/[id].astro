---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import TeamsBar from '../../components/TeamsBar.astro';
import Footer from '../../components/Footer.astro';

export const prerender = false;
---

<BaseLayout
    title="Debate - LaLiga Social"
    description="Participa en debates de la comunidad LaLiga Social"
    keywords="LaLiga, debate, comunidad, fútbol, discusión">

    <Navbar />
    <TeamsBar />

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Debate Detail Container -->
            <div id="debate-detail-container">
                <!-- Will be populated by JavaScript -->
            </div>
        </div>
    </main>

    <Footer />

    <!-- ==================== PAGE-SPECIFIC SCRIPTS ==================== -->
    <!-- Shared: Data (required for debate detail) -->
    <script is:inline src="/assets/js/shared/data/debates.js"></script>

    <!-- Debate Detail Component -->
    <script is:inline src="/assets/js/application/components/debates/debate-detail.js"></script>
</BaseLayout>
